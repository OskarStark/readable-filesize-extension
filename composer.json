{
    "name": "oskarstark/readable-filesize-extension",
    "type": "library",
    "description": "A Twig extension to convert filesize to human readable string",
    "keywords": [
        "twig",
        "twig-extension",
        "filesize",
        "human-readable"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Oskar Stark",
            "email": "oskarstark@googlemail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "twig/twig": "^2.6 || ^3.0",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "ergebnis/data-provider": "^3.0",
        "ergebnis/php-cs-fixer-config": "^6.0",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^2.3"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "OskarStark\\Twig\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OskarStark\\Twig\\Tests\\": "tests/"
        }
    }
}
